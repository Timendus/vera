html,body {
	width: 100%;
	padding: 0px;
	margin: 0px;
}

a {
	color: blue;
}

h1 {
	font: bold 13px verdana,Tahoma,Arial,sans-serif;
	border-bottom: 2px dotted black;
	color: #003399;
	background-color: #B5C3FF;
	border-bottom: 1px solid #A8ADBE;
	padding: 10px;
	margin: 0px;
	
}

h2 {
	font: bold 12px verdana,Tahoma,Arial,sans-serif;
	color: #003399;
	margin: 25px 0px 20px 0px;
	background-color: #D4DFFF;
	padding: 5px;
	padding-left: 10px;
	border-top: 1px solid #C8CDDE;
	border-bottom: 1px solid #C8CDDE;
}

h3 {
	font: bold 11px verdana,Tahoma,Arial,sans-serif;
	margin: 25px 20px 0px 20px;
	color: #000066;
	background-color: #EFEFF7;
	border-bottom: 1px solid #D5D5D3;
	padding: 3px;
	padding-left: 6px;
}

p {
	font: 11px "Times New Roman",times,serif;
	margin: 10px 20px 0px 20px;
	padding-left: 10px;
}

ul, li {
	font: 11px "Times New Roman",times,serif;
	margin: 0px 20px 0px 20px;
	padding: 0px;
	padding-left: 4px;
	list-style: circle;
}

ul {
	margin-top: 10px;
}

pre {
	font: 10px "Courier New",courier,monospace;
	margin: 0px 20px 0px 20px;
	padding: 10px;
	background-color: #F5F5FF;
	border-bottom: 1px solid #D5D5D3;
}

.warning {
	background: url('icon_error.png') no-repeat 3px center;
	background-color: #FFEEDD;
	border-bottom: 1px solid #FFCCBB;
	padding-left: 22px;
}

.tree ul, .tree li{
	margin: 0px 20px 0px 20px;
}

