	<routine>
		<name>SECS2CLOCKS</name>
		<description>
			<p>Convert seconds to clockticks </p>
		</description>
		<author>Tim Franssen (mail@timendus.com)</author>
	</routine>

	<routine>
		<name>SECS2SLEEP</name>
		<description>
			<p>Convert seconds to clockticks/10.000 for sleep routine </p>
		</description>
		<author>Tim Franssen (mail@timendus.com)</author>
		<example>
			<line>	ld hl,SECS2SLEEP(30)</line>
			<line>	call system_sleep</line>
			<line>	; About 30 seconds have passed</line>
		</example>
	</routine>

</file>
